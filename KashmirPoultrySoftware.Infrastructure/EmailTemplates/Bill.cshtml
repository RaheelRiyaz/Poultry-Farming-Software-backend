<table
  style="
    border: 1px solid black;
    border-collapse: collapse;
    font-size: 18px;
    width: 100%;
    box-shadow: 5px 2px 10px 0px gray;
  "
>
  <tr style="background-color: #f6f6f6">
    <th
      style="border: 1px solid #adadad; padding: 10px; text-align: start"
      colspan="3"
    >
      Invoice #12345ABC
    </th>
    <th style="border: 1px solid #adadad; padding: 10px; text-align: start">
      7 Jan 2022
    </th>
  </tr>
  <tr>
    <td
      colspan="2"
      style="border: 1px solid #adadad; padding: 10px; text-align: start"
    >
      <h3>Pay To:</h3>
      <p>The Tech Park</p>
      <p>123 Willow street</p>
      <p>Boulevard, LA - 567892</p>
    </td>
        <td colspan="2" style="border: 1px solid #adadad; padding: 10px; text-align: start">
            <h3>Customer:</h3>
            <p>@Model.Bills[0].Email</p>
            <p>@Model.Bills[0].CustomerContact</p>
        </td>
  </tr>
  <tr style="background-color: #f6f6f6;margin-right:5px">
    <th>Qty.</th>
    <th>MRP</th>
    <th>Amount</th>
    <th>Sold on</th>
  </tr>
    @foreach (var billItem in @Model.Bills)
    {
        <tr>
            <td style="border: 1px solid #adadad; padding: 10px; text-align: start">No of kilograms :@billItem.NoOfKilograms kgs</td>
            <td style="border: 1px solid #adadad; padding: 10px; text-align: start">@billItem.Rate.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</td>
            <td style="border: 1px solid #adadad; padding: 10px; text-align: start">@billItem.TotalAmount.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</td>
            <td style="border: 1px solid #adadad; padding: 10px; text-align: start">@billItem.SoldOn.ToString("yyyy-MM-dd")</td>
        </tr>
    }
    
    <tr>
        <th style="background-color: #f6f6f6;margin-right:5px" colspan="3">Subtotal:</th>
        <td>@Model.SubTotal.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</td>
    </tr>

</table>
